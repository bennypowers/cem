{
  "include": ["benchmark/components/*.ts"],
  "exclude": [
    "**/node_modules/**/*",
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "downlevelIteration": true,
    "emitDeclarationOnly": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "incremental": true,
    "inlineSources": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": true,
    "noEmitOnError": false,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "lib": [
      "DOM.iterable",
      "DOM",
      "ES5",
      "ES6",
      "ES2020",
      "ES2022",
      "ES2024",
      "ES2015.Generator",
      "ESNext.Collection",
      "ESNext.Array",
      "ESNext.Iterator",
      "ESNext.AsyncIterable",
      "ESNext.Disposable",
      "ScriptHost"
    ]
  }
}

