{
  "schemaVersion": "2.1.1",
  "modules": [
    {
      "kind": "javascript-module",
      "path": "my-button.js",
      "declarations": [
        {
          "kind": "class",
          "name": "MyButton",
          "tagName": "my-button",
          "customElement": true,
          "description": "A custom button component",
          "attributes": [
            {
              "name": "variant",
              "type": {
                "text": "\"primary\" | \"secondary\" | \"danger\""
              },
              "description": "Button variant style"
            },
            {
              "name": "disabled",
              "type": {
                "text": "boolean"
              },
              "description": "Whether the button is disabled"
            },
            {
              "name": "size",
              "type": {
                "text": "string"
              },
              "default": "medium",
              "description": "Button size"
            }
          ],
          "events": [
            {
              "name": "my-click",
              "type": {
                "text": "CustomEvent"
              },
              "description": "Button click event"
            }
          ]
        }
      ],
      "exports": [
        {
          "kind": "custom-element-definition",
          "name": "my-button",
          "declaration": {
            "name": "MyButton",
            "module": "my-button.js"
          }
        }
      ]
    },
    {
      "kind": "javascript-module",
      "path": "my-input.js",
      "declarations": [
        {
          "kind": "class",
          "name": "MyInput",
          "tagName": "my-input",
          "customElement": true,
          "description": "A custom input component",
          "attributes": [
            {
              "name": "value",
              "type": {
                "text": "string"
              },
              "description": "Input value"
            },
            {
              "name": "placeholder",
              "type": {
                "text": "string"
              },
              "description": "Input placeholder text"
            }
          ]
        }
      ],
      "exports": [
        {
          "kind": "custom-element-definition",
          "name": "my-input",
          "declaration": {
            "name": "MyInput",
            "module": "my-input.js"
          }
        }
      ]
    }
  ]
}