{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test Fixture (generate)",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/generate",
      "env": {
        "FIXTURE_PATTERN": "${input:fixturePattern}"
      },
      "args": [
        "-test.run",
        "TestGenerate"
      ]
    },
    {
      "name": "Test Fixture (manifest)",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/manifest",
      "env": {
        "FIXTURE_PATTERN": "${input:fixturePattern}"
      },
      "args": [
        "-test.run",
        "./..."
      ]
    },
    {
      "name": "Benchmark",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/generate",
      "args": [
        "-test.bench=BenchmarkGenerate",
        "-test.run=^$"
      ]
    },
    {
      "name": "Debug cem generate",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "presentation": {
        "order": 0
      },
      "args": [
        "generate",
        "generate/test-fixtures/*.ts"
      ]
    },
    {
      "name": "Debug cem generate (args)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "presentation": {
        "order": 1
      },
      "args": [
        "generate",
        "${input:generate}"
      ]
    }
  ],
  "inputs": [
    {
      "id": "generate",
      "type": "promptString",
      "description": "Arguments...",
      "default": "generate/test-fixtures/*.ts"
    },
    {
      "id": "projectDir",
      "type": "promptString",
      "description": "Project dir"
    },
    {
      "id": "fixturePattern",
      "type": "promptString",
      "description": "Pattern of fixtures to match (without extension, e.g. class-exports)"
    }
  ]
}
