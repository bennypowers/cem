{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test Fixture",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}",
      "args": [
        "test",
        "-run",
        "TestFixture_${input:fixtureName}"
      ]
    },
    {
      "name": "Debug cem generate",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "presentation": {
        "order": 0
      },
      "args": [
        ".",
        "generate",
        "generate/test-fixtures/*.ts"
      ]
    },
    {
      "name": "Debug cem generate (args)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "presentation": {
        "order": 1
      },
      "args": [
        ".",
        "generate",
        "${input:generate}"
      ]
    }
  ],
  "inputs": [
    {
      "id": "generate",
      "type": "promptString",
      "description": "Arguments...",
      "default": "generate/test-fixtures/*.ts"
    },
    {
      "id": "fixtureName",
      "type": "promptString",
      "description": "Name of fixture file (without extension, e.g. class-exports)"
    }
  ]
}
