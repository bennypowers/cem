  "demo": {
    "color": {
      "brand": {
        "$type": "color",
        "$value": "#0070f3",
        "$description": "Primary brand color"
      },
      "success": {
        "$type": "color",
        "$value": "#10b981",
        "$description": "Success state color"
      },
      "warning": {
        "$type": "color",
        "$value": "#f59e0b",
